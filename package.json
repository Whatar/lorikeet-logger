{
  "name": "@whatar/parrot-logger",
  "version": "1.0.6",
  "description": "A logger which unpacks and colors the output.",
  "type": "module",
  "main": "dist/logger.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "npm run build:test && mocha dist-test/test",
    "build": "tsup src/logger.ts --format esm,cjs --dts-resolve",
    "build:test": "tsup --config tsup.config.test.ts",
    "prepublishOnly": "npm run build",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatar/parrot-logger.git"
  },
  "keywords": [
    "logger",
    "util",
    "color",
    "output",
    "parrot"
  ],
  "author": "Whatar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whatar/parrot-logger/issues"
  },
  "homepage": "https://github.com/whatar/parrot-logger#readme",
  "dependencies": {
    "ts-node": "^10.2.1",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.1",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node18",
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/**/*.ts"
    ]
  }
}